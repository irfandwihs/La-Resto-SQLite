<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReadResep1">

    <TextView
        android:id="@+id/edt_no_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_no_1"
        android:layout_below="@+id/tv_no_1"
        android:text="tv_no_1"/>

    <TextView
        android:id="@+id/tv_no_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:text="Nomor" />

    <TextView
        android:id="@+id/tv_judul_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_no_1"
        android:layout_alignLeft="@+id/edt_no_1"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Judul" />

    <TextView
        android:id="@+id/edt_judul_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_judul_1"
        android:layout_below="@+id/tv_judul_1"
        android:text="tv_judul_1"/>

    <TextView
        android:id="@+id/tv_kategori_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_judul_1"
        android:layout_below="@+id/edt_judul_1"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Kategori" />

    <TextView
        android:id="@+id/edt_kategori_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_kategori_1"
        android:layout_below="@+id/tv_kategori_1"
        android:text="tv_kategori_1"/>

    <TextView
        android:id="@+id/tv_bahan_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_kategori_1"
        android:layout_below="@+id/edt_kategori_1"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Bahan" />

    <TextView
        android:id="@+id/edt_bahan_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_bahan_1"
        android:layout_below="@+id/tv_bahan_1"
        android:text="tv_bahan_1"/>

    <TextView
        android:id="@+id/tv_intruksi_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_bahan_1"
        android:layout_below="@+id/edt_bahan_1"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Intruksi" />

    <TextView
        android:id="@+id/edt_intruksi_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_intruksi_1"
        android:layout_below="@+id/tv_intruksi_1"
        android:text="tv_intruksi_1"/>

    <Button
        android:id="@+id/btn_batal_1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_intruksi_1"
        android:layout_alignLeft="@+id/edt_intruksi_1"
        android:layout_marginTop="34dp"
        android:drawableLeft="@android:drawable/ic_delete"
        android:text="Batal" />

</RelativeLayout>